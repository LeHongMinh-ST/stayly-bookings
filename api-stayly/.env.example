# Application
NODE_ENV=development
APP_NAME=Stayly API
PORT=3000

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=stayly_db
DATABASE_USER=stayly_user
DATABASE_PASSWORD=stayly_password
DATABASE_SCHEMA=public
DATABASE_SYNCHRONIZE=false
DATABASE_LOGGING=true

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=3600

# Kafka
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=stayly-api
KAFKA_GROUP_ID=stayly-consumer-group
KAFKA_SASL_USERNAME=
KAFKA_SASL_PASSWORD=

# JWT
JWT_SECRET=please-change-me
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=please-change-refresh
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:3001

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Email (SendGrid / Mailgun)
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=
EMAIL_FROM=noreply@stayly.com

# Payment (VNPay / MoMo)
PAYMENT_GATEWAY=vnpay
VNPAY_TMN_CODE=
VNPAY_HASH_SECRET=
VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNPAY_RETURN_URL=http://localhost:3001/payment/callback
MOMO_PARTNER_CODE=
MOMO_ACCESS_KEY=
MOMO_SECRET_KEY=
MOMO_ENDPOINT=https://test-payment.momo.vn/v2/gateway/api/create

# File Storage (Local / MinIO / S3)
FILE_STORAGE_DRIVER=local
FILE_STORAGE_PATH=./uploads
S3_ENDPOINT=
S3_REGION=
S3_BUCKET=
S3_ACCESS_KEY=
S3_SECRET_KEY=

# Observability
SENTRY_DSN=
SENTRY_SAMPLE_RATE=0.1
SENTRY_ENVIRONMENT=development

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_HEALTHCHECK=true